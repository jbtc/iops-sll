            //chartType: "Pie",
            xField: "Gates",
            yFields: "Utilized",
            xValue: new[] { "Gate1A", "Gate1B", "Gate2A", "Gate2B", "Gate3A", "Gate3B", "Gate4A", "Gate4B" },
            yValues: new[] { dbData1, dbData2, dbData3, dbData4, dbData5, dbData6, dbData7, dbData8 }
