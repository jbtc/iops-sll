    var dbData5 = db.SLL_PBB_AlarmLogging.Where(w => w.Gate.Equals("Gate3A") && (w.AlarmDateTime >= dateStart && w.AlarmDateTime < dateEnd)).Count();
    var dbData6 = db.SLL_PBB_AlarmLogging.Where(w => w.Gate.Equals("Gate3B") && (w.AlarmDateTime >= dateStart && w.AlarmDateTime < dateEnd)).Count();
    var dbData7 = db.SLL_PBB_AlarmLogging.Where(w => w.Gate.Equals("Gate4A") && (w.AlarmDateTime >= dateStart && w.AlarmDateTime < dateEnd)).Count();
    var dbData8 = db.SLL_PBB_AlarmLogging.Where(w => w.Gate.Equals("Gate4B") && (w.AlarmDateTime >= dateStart && w.AlarmDateTime < dateEnd)).Count();

    var myChart = new System.Web.Helpers.Chart(width: 700, height: 500, theme: ChartTheme.Blue);

