                }
            });
        });

        //up arrow (Airport screen)
        $('#zoneWindowLink1').click(function (e) {
            $.ajax({
                url: '@Url.Action("ShowAirport", "Airport", new { area = "Airport" })',
                type: "GET",
                data: {
                    clientName: "JFK",
                    numberOfScreens: $('#txtScreenNumber').val()
                },
